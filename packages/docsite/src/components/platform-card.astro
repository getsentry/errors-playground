---
import type { z } from "astro:content";
import reactIcon from "platformicons/svg/react.svg";

import type { errorSchema } from "../content/config";

type ErrorSchema = z.infer<typeof errorSchema>;

type Props = Pick<ErrorSchema, "platform">;

const { platform } = Astro.props;

const iconsMap = {
  react: reactIcon,
} as { [key: string]: string };
---

<div class="platform-card">
  <img
    class="platform-card__icon"
    src={iconsMap[platform]}
    alt={`${platform} icon`}
  />
  <h2 class="platform-card__label">{platform}</h2>
  <a class="platform-card__link" href={`/${platform}`}></a>
</div>

<style>
  .platform-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    border-radius: 0.5rem;
    background-color: var(--color-primary);
    color: var(--color-white);
    position: relative;
    text-align: center;
    background: #fff;
    box-shadow: 0 2px 0 rgba(54, 45, 89, 0.15);
    color: #231c3d;
    line-height: 1.5;
    transition-duration: 0.25s;
    transition-property: box-shadow, border-color;
    transition-timing-function: ease-out;
  }

  .platform-card:hover {
    box-shadow: 0 2px 0 rgba(54, 45, 89, 0.15),
      -0.1875rem -0.1875rem 0 0.1875rem #f2b712, 0 0 0 0.375rem #e1567c;
    cursor: pointer;
    text-decoration: none;
  }

  .platform-card__icon {
    width: 4rem;
    height: 4rem;
  }

  .platform-card__label {
    margin-top: 0.5rem;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .platform-card__link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
